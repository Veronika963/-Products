            <div class="products_inner">

                <ul class="cards">
                    <% for (products of data) { %>
                        <li>
                            <a href="#" class="products_item">
                                <h3 class="product_name">
                                    <%= products.name %>
                                </h3>
                                <img src="<%= products.img %>" alt="iPhone 11" class="product_img" />
                                <div class="specifications">
                                    <% for (description of products.info) { %>
                                        <div class="specifications_item">
                                            <div class="specification_name">
                                                <%= description.key %>
                                            </div>
                                            <p class="specification_text">
                                                <%= description.value %>
                                            </p>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="product_price">
                                    <div class="product_new_price">
                                        <%= products.price %>
                                    </div>
                                    <div class="product_old_price">
                                        <%= products.oldPrice %>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <% } %>
                </ul>
                <div class="products-btn">
                    <a href="#" class="products-button">Показать все товары</a>
                </div>
            <script src="./button.js"></script>
            <script src="./preload.js"></script>
